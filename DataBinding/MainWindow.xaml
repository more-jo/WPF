<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="434" Width="295">

    <StackPanel Margin="10">

        <StackPanel x:Name="Spl_DataContextBsp">
            <StackPanel.DataContext>
                <local:Person Name="Anna Nass" Alter="25"/>
            </StackPanel.DataContext>

            <TextBox Text="{Binding Path=Name}"/>
            <TextBlock Text="{Binding Alter}"/>
            <TextBlock Text="{Binding WichtigeTage[1].DayOfWeek}"/>
            <TextBlock Text="{Binding LastObject}"/>

            <Button Content="Show" x:Name="Btn_Show" Click="Btn_Show_Click"/>
            <Button Content="Altern" x:Name="Btn_Altern" Click="Btn_Altern_Click"/>
            <Button Content="New Day" x:Name="Btn_NewDay" Click="Btn_NewDay_Click"/>

        </StackPanel>

        <ListView Height="150" x:Name="LstV_Personen"
                  ItemsSource="{Binding Personenliste}"/>
        <Button Content="Neue Person" x:Name="Btn_New" Click="Btn_New_Click"/>
        <Button Content="Lösche Person" x:Name="Btn_Löschen" Click="Btn_Löschen_Click"/>
    </StackPanel>

</Window>
