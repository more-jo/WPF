<Window x:Class="PropertyBindings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PropertyBindings"
        mc:Ignorable="d"
        Title="MainWindow" Height="236" Width="338">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal">
            
            <Slider x:Name="Sdr_Eins"
                    Minimum="0"
                    Maximum="100"
                    Width="200"/>
            
            <TextBox Width="100">
                <TextBox.Text>
                    <Binding ElementName="Sdr_Eins" Path="Value" UpdateSourceTrigger="PropertyChanged"/>
                </TextBox.Text>
            </TextBox>
            
        </StackPanel>

    </StackPanel>
</Window>
